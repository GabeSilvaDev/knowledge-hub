					"listen": "test",
					"script": {
						"exec": [
							"try {",
							"    const response = pm.response.json();",
							"",
							"    if (response.token) {",
							"        pm.collectionVariables.set(\"token\", response.token);",
							"",
							"        console.log(\"✅ Token salvo na variável da collection:\", response.token);",
							"        pm.test(\"Token salvo na collection\", function () {",
							"            pm.expect(pm.collectionVariables.get(\"token\")).to.eql(response.token);",
							"        });",
							"    } else {",
							"        console.warn(\"⚠️ O campo 'token' não foi encontrado na resposta.\");",
							"        pm.test(\"Token não encontrado\", function () {",
							"            pm.expect.fail(\"Campo 'token' ausente na resposta.\");",
							"        });",
							"    }",
